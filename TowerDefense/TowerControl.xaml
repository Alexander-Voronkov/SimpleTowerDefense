<UserControl x:Class="TowerDefense.TowerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TowerDefense"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="Sprite" Grid.Row="0" Margin="0 0 0 20" Width="150" Height="150"/>
        <ProgressBar x:Name="CurrentHp" Background="PaleVioletRed" Height="10" Grid.Row="1"/>
    </Grid>
</UserControl>
